<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:srcCompat="@tools:sample/avatars"/>

    <RadioGroup
        android:id="@+id/rg_sexe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_homme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Homme"
            android:layout_marginEnd="25dp"/>

        <RadioButton
            android:id="@+id/rb_femme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Femme"/>
    </RadioGroup>

    <EditText
        android:id="@+id/et_firstname"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="200dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="Nom *"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintTop_toBottomOf="@id/rg_sexe"></EditText>

    <EditText
        android:id="@+id/et_name"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="200dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="Prénom *"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintTop_toBottomOf="@id/et_firstname"></EditText>

    <EditText
        android:id="@+id/et_birthday"
        android:inputType="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="260dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="Date d'anniversaire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"></EditText>

    <EditText
        android:id="@+id/et_tel"
        android:inputType="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="260dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="Numéro téléphone *"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_birthday"></EditText>

    <EditText
        android:id="@+id/et_mail"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="260dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="E-mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_tel"></EditText>

    <EditText
        android:id="@+id/et_ps"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="260dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="Code Postal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mail"></EditText>

    <EditText
        android:id="@+id/et_adress"
        android:inputType="textPostalAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:width="260dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="48dp"
        android:hint="Adresse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ps"></EditText>

    <Button
        android:id="@+id/btn_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="VALIDER"
        android:width="320dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_adress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>